<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password_digest, style: "display: block" %>
    <%= form.text_field :password_digest %>
  </div>

  <div>
    <%= form.label :token, style: "display: block" %>
    <%= form.text_field :token %>
  </div>

  <div>
    <%= form.label :upload_key, style: "display: block" %>
    <%= form.text_field :upload_key %>
  </div>

  <div>
    <%= form.label :admin, style: "display: block" %>
    <%= form.check_box :admin %>
  </div>

  <div>
    <%= form.label :default_private, style: "display: block" %>
    <%= form.check_box :default_private %>
  </div>

  <div>
    <%= form.label :default_expiration_duration, style: "display: block" %>
    <%= form.text_field :default_expiration_duration %>
  </div>

  <div>
    <%= form.label :default_download_limit, style: "display: block" %>
    <%= form.number_field :default_download_limit %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
