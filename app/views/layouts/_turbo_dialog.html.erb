<%= turbo_frame_tag :modal do %>
  <dialog data-controller="dialog"
          data-action="click->dialog#clickOutside"
          class="backdrop:bg-gray-400 backdrop:bg-opacity-90 z-10 rounded-md border-4 w-full md:w-2/3 mt-24">
    <div class="p-8">
      <div class="flex justify-end mb-4">
        <button class="button-primary" data-action="dialog#close">Close</button>
      </div>

      <%= yield %>

    </div>
  </dialog>
<% end %>
