          <td class="whitespace-nowrap hidden sm:table-cell"><%= number_to_human_size(upload.file.byte_size) %></td>
          <td class="whitespace-nowrap hidden sm:table-cell"><%= upload.created_at.to_date.to_fs(:rfc822) %></td>
